
@* @model CareerAI.Models. *@
@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Forgot Password";
}


@section Styles {
    <link rel="stylesheet" href="~/css/ForgotPassword.css" /> 
}
<div class="main-container">
    <div class="left">
        <img src="/assets/ForgotPass/forgot-pass-image.svg">
    </div>
    <div class="right">
        <h1>FORGOT</h1>
        <h2> PASSWORD?</h2>
         <p class="message1">Forgot your password? Reset it here.</p>
        <form asp-action="ForgotPassword" method="post">
            <label>Email Address</label><br>
            <input class="input" type="email" name="email" placeholder="Enter your Email Here" required>
            <input type="submit" value="SUBMIT" class="submit-btn">
        </form>
    </div>
</div>
  